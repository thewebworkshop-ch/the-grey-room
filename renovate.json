{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigests",
    "security:openssf-scorecard",
    ":gitSignOff",
    ":semanticCommits",
    "mergeConfidence:all-badges"
  ],
  "ignoreUnstable": true,
  "labels": ["dependencies"],
  "schedule": ["before 9am on monday"],
  "timezone": "Europe/Zurich",
  "prHourlyLimit": 5,
  "prConcurrentLimit": 1,
  "rebaseWhen": "behind-base-branch",
  "platformAutomerge": true,
  "automerge": true,
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "schedule": ["at any time"]
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 9am on the first day of the month"]
  },
  "packageRules": [
    {
      "description": "Group remaining dev dependencies (generic, must be first)",
      "matchDepTypes": ["devDependencies"],
      "groupName": "dev dependencies"
    },
    {
      "description": "Group Docker updates",
      "matchManagers": ["dockerfile"],
      "groupName": "docker"
    },
    {
      "description": "Group GitHub Actions",
      "matchManagers": ["github-actions"],
      "groupName": "github-actions"
    },
    {
      "description": "Group Node.js updates",
      "matchDepNames": ["node"],
      "groupName": "node"
    },
    {
      "description": "Group Storybook packages",
      "groupName": "storybook",
      "matchPackageNames": ["/^@storybook//", "/^storybook$/"]
    },
    {
      "description": "Group React packages",
      "matchPackageNames": [
        "react",
        "react-dom",
        "@types/react",
        "@types/react-dom"
      ],
      "groupName": "react"
    },
    {
      "description": "Group Prisma packages",
      "groupName": "prisma",
      "matchPackageNames": ["/^@prisma//", "/^prisma$/"]
    },
    {
      "description": "Group Playwright packages",
      "groupName": "playwright",
      "matchPackageNames": [
        "/^@playwright//",
        "/^playwright$/",
        "/^@axe-core/playwright$/"
      ]
    },
    {
      "description": "Group Vitest packages",
      "groupName": "vitest",
      "matchPackageNames": ["/^vitest$/", "/^@vitest//", "/^@vitejs//"]
    },
    {
      "description": "Group Testing Library packages",
      "groupName": "testing-library",
      "matchPackageNames": ["/^@testing-library//"]
    },
    {
      "description": "Group Tailwind CSS packages",
      "groupName": "tailwind",
      "matchPackageNames": [
        "/^tailwindcss$/",
        "/^@tailwindcss//",
        "/^prettier-plugin-tailwindcss$/"
      ]
    },
    {
      "description": "Group Commitlint packages",
      "groupName": "commitlint",
      "matchPackageNames": ["/^@commitlint//"]
    },
    {
      "description": "Group Next.js with its ESLint config",
      "matchPackageNames": ["next", "eslint-config-next"],
      "groupName": "next.js"
    },
    {
      "description": "Major updates: require dashboard approval (no auto PR)",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "dependencyDashboardApproval": true
    },
    {
      "description": "Production minor: require dashboard approval (no auto PR)",
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["minor"],
      "automerge": false,
      "dependencyDashboardApproval": true
    },
    {
      "description": "Production deps: patch after 14 days",
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["patch"],
      "minimumReleaseAge": "14 days"
    }
  ]
}

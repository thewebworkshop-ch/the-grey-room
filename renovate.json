{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigests",
    "security:openssf-scorecard",
    ":gitSignOff",
    ":semanticCommits",
    "mergeConfidence:all-badges"
  ],
  "ignoreUnstable": true,
  "labels": ["dependencies"],
  "schedule": ["before 9am on monday"],
  "timezone": "Europe/Zurich",
  "prHourlyLimit": 5,
  "platformAutomerge": true,
  "automerge": true,
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "schedule": ["at any time"]
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 9am on the first day of the month"]
  },
  "packageRules": [
    {
      "description": "Group remaining dev dependencies (generic, must be first)",
      "matchDepTypes": ["devDependencies"],
      "groupName": "dev dependencies"
    },
    {
      "description": "Group Docker updates",
      "matchManagers": ["dockerfile"],
      "groupName": "docker"
    },
    {
      "description": "Group GitHub Actions",
      "matchManagers": ["github-actions"],
      "groupName": "github-actions"
    },
    {
      "description": "Group Node.js updates",
      "matchDepNames": ["node"],
      "groupName": "node"
    },
    {
      "description": "Group Storybook packages",
      "matchPackagePatterns": ["^@storybook/", "^storybook$"],
      "groupName": "storybook"
    },
    {
      "description": "Group React packages",
      "matchPackageNames": [
        "react",
        "react-dom",
        "@types/react",
        "@types/react-dom"
      ],
      "groupName": "react"
    },
    {
      "description": "Group Prisma packages",
      "matchPackagePatterns": ["^@prisma/", "^prisma$"],
      "groupName": "prisma"
    },
    {
      "description": "Group Playwright packages",
      "matchPackagePatterns": [
        "^@playwright/",
        "^playwright$",
        "^@axe-core/playwright$"
      ],
      "groupName": "playwright"
    },
    {
      "description": "Group Vitest packages",
      "matchPackagePatterns": ["^vitest$", "^@vitest/", "^@vitejs/"],
      "groupName": "vitest"
    },
    {
      "description": "Group Testing Library packages",
      "matchPackagePatterns": ["^@testing-library/"],
      "groupName": "testing-library"
    },
    {
      "description": "Group Tailwind CSS packages",
      "matchPackagePatterns": [
        "^tailwindcss$",
        "^@tailwindcss/",
        "^prettier-plugin-tailwindcss$"
      ],
      "groupName": "tailwind"
    },
    {
      "description": "Group Commitlint packages",
      "matchPackagePatterns": ["^@commitlint/"],
      "groupName": "commitlint"
    },
    {
      "description": "Group Next.js with its ESLint config",
      "matchPackageNames": ["next", "eslint-config-next"],
      "groupName": "next.js"
    },
    {
      "description": "Never automerge major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "description": "Production deps: no automerge for minor",
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["minor"],
      "automerge": false
    },
    {
      "description": "Production deps: patch after 14 days",
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["patch"],
      "minimumReleaseAge": "14 days"
    }
  ]
}

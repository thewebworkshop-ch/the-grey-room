{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigests",
    "security:openssf-scorecard",
    ":gitSignOff",
    "mergeConfidence:all-badges"
  ],
  "ignoreUnstable": true,
  "labels": ["dependencies"],
  "schedule": ["before 9am on monday"],
  "timezone": "Europe/Zurich",
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10,
  "automergeType": "pr",
  "platformAutomerge": true,
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  },
  "packageRules": [
    {
      "description": "Group non-major dependencies together",
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "non-major dependencies"
    },
    {
      "description": "Group dev dependencies together",
      "matchDepTypes": ["devDependencies"],
      "groupName": "dev dependencies"
    },
    {
      "description": "Group Docker updates together",
      "matchManagers": ["dockerfile"],
      "groupName": "docker"
    },
    {
      "description": "Group GitHub Actions together",
      "matchManagers": ["github-actions"],
      "groupName": "github-actions"
    },
    {
      "description": "Group Node.js updates (Dockerfile + .nvmrc) together",
      "matchDepNames": ["node"],
      "groupName": "node"
    },
    {
      "description": "Never automerge major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "description": "Automerge devDependencies (all except major)",
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    },
    {
      "description": "Automerge production patch only (after 14 days)",
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "minimumReleaseAge": "14 days"
    },
    {
      "description": "Automerge Docker (all except major)",
      "matchManagers": ["dockerfile"],
      "automerge": true
    },
    {
      "description": "Automerge GitHub Actions (all except major)",
      "matchManagers": ["github-actions"],
      "automerge": true
    }
  ]
}
